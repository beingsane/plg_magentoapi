<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_MAGENTOAPI</name>
	<author>Yireo</author>
	<creationDate>August 2012</creationDate>
	<copyright>Copyright (C) 2012 Yireo.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@yireo.com</authorEmail>
	<authorUrl>www.yireo.com</authorUrl>
	<version>1.0.2</version>
	<description>PLG_SYSTEM_MAGENTOAPI_DESC</description>

	<files>
		<filename plugin="magentoapi">magentoapi.php</filename>
		<filename>index.html</filename>
	</files>

    <config>
		<fields name="params">
			<fieldset name="basic">
        		<field name="folder" type="text" default="" label="PLG_SYSTEM_MAGENTOAPI_FIELD_FOLDER" description="PLG_SYSTEM_MAGENTOAPI_FIELD_FOLDER_DESC"/>
		        <field name="enable_backend" type="radio" default="0" label="PLG_SYSTEM_MAGENTOAPI_FIELD_ENABLE_BACKEND" description="PLG_SYSTEM_MAGENTOAPI_FIELD_ENABLE_BACKEND_DESC">
        			<option value="0">No</option>
        			<option value="1">Yes</option>
		        </field>
		        <field name="enable_frontend" type="radio" default="1" label="PLG_SYSTEM_MAGENTOAPI_FIELD_ENABLE_FRONTEND" description="PLG_SYSTEM_MAGENTOAPI_FIELD_ENABLE_FRONTEND_DESC">
        			<option value="0">No</option>
        			<option value="1">Yes</option>
		        </field>
		        <field name="debug" type="radio" default="0" label="PLG_SYSTEM_MAGENTOAPI_FIELD_DEBUG" description="PLG_SYSTEM_MAGENTOAPI_FIELD_DEBUG_DESC">
        			<option value="0">No</option>
        			<option value="1">Yes</option>
		        </field>
            </fieldset>
    	</fields>
    </config>

    <languages>
        <language tag="en-GB">en-GB.plg_system_magentoapi.ini</language>
        <language tag="en-GB">en-GB.plg_system_magentoapi.sys.ini</language>
    </languages>
</extension>
